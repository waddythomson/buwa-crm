---
import Layout from './Layout.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="auth-wrapper">
    <div class="auth-card card">
      <div class="logo">BuWa CRM</div>
      <slot />
    </div>
  </div>
</Layout>

<style>
  .auth-wrapper {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }
  .auth-card {
    width: 100%;
    max-width: 400px;
    text-align: center;
  }
  .logo {
    font-size: 28px;
    font-weight: 700;
    color: #2563eb;
    margin-bottom: 32px;
  }
</style>
